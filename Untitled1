<?php
$fruits =array("apple","peach","strawberry");
foreach($fruits as $fruit) {
 echo $fruit;
 echo "\n";
}
?>

<?php

$start = 1;

$end = 100;

 for($i = $start; $i <= $end; $i++){

  // 5で割り切れたら{}内を実行する
  if($i % 5 == 0){
    echo $i;
  }
}
?>